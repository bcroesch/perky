<div>
  <%= form_for([@account,@user], html: { class: "form-horizontal" }) do |f| %>
    <fieldset>
      <div class="row-fluid">
        <div class="col-md-6">
          <div class="control-group">
            <%= f.label :email, class: "control-label" %>
            <div class="controls">
              <%= f.email_field :email, autofocus: true, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :first_name, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :first_name, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :last_name, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :last_name, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= f.submit 'Create', class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>

    </fieldset>
  <% end %>
</div>
