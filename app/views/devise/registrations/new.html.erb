<div class="authform">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal credit-card-form" }) do |f| %>
        <%= devise_error_messages! %>

			  <h3>Sign Up</h3>

              <div class="form-group">
			  	<%= f.label :email %>
			  	<%= f.email_field :email, class: 'form-control' %>
			  </div>

              <div class="form-group">
			  	<%= f.label :first_name %>
			  	<%= f.text_field :first_name, class: 'form-control' %>
			  </div>

              <div class="form-group">
			  	<%= f.label :last_name %>
			  	<%= f.text_field :last_name, class: 'form-control' %>
			  </div>

              <%= f.fields_for :account do |af| %>
                <div class="form-group">
                  <%= af.label :name, "Organization Name" %>
                  <%= af.text_field :name, class: "form-control" %>
                </div>
              <% end %>

              <div class="form-group">
			  	<%= f.label :password %>
			  	<%= f.password_field :password, class: 'form-control' %>
			  </div>

              <div class="form-group">
			  	<%= f.label :password_confirmation %>
			  	<%= f.password_field :password_confirmation, class: 'form-control' %>
			  </div>

              <%= render 'accounts/credit_card_fields' %>

			  <%= f.submit 'Sign up', :class => 'button right' %>

      <% end %>

      <%= render "devise/shared/links" %>

</div>
