<div class="row-fluid">
  <div class="box">
    <div class="box-header">
      <h2><i class="icon-money"></i>Sign Up</h2>
    </div>

    <div class="box-content">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal credit-card-form" }) do |f| %>
        <%= devise_error_messages! %>

        <fieldset>
          <div class="row-fluid">
            <div class="col-md-6">
              <div class="control-group">
                <%= f.label :email, class: "control-label" %>
                <div class="controls">
                  <%= f.email_field :email, autofocus: true, class: "input-xlarge" %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :first_name, class: "control-label" %>
                <div class="controls">
                  <%= f.text_field :first_name, class: "input-xlarge" %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :last_name, class: "control-label" %>
                <div class="controls">
                  <%= f.text_field :last_name, class: "input-xlarge" %>
                </div>
              </div>

              <%= f.fields_for :account do |af| %>
                <div class="control-group">
                  <%= af.label :name, "Organization Name", class: "control-label" %>
                  <div class="controls">
                    <%= af.text_field :name, class: "input-xlarge" %>
                  </div>
                </div>
              <% end %>

              <div class="control-group">
                <%= f.label :password, class: "control-label" %>
                <div class="controls">
                  <%= f.password_field :password, class: "input-xlarge" %>
                </div>
              </div>

              <div class="control-group">
                <%= f.label :password_confirmation, class: "control-label" %>
                <div class="controls">
                  <%= f.password_field :password_confirmation, class: "input-xlarge" %>
                </div>
              </div>

              <%= render 'accounts/credit_card_fields' %>

            </div>

          </div>
          <div class="form-actions">
            <%= f.submit 'Sign up', class: "btn btn-primary" %>
          </div>

        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
