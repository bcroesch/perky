<h3>Employees</h3>
<div class="users">
  <div class="row">
    <div class="col-md-4">Name</div>
    <div class="col-md-4">Email</div>
    <div class="col-md-4">Monthly Credits</div>
  </div>
  <% @users.each do |user| %>
    <div class="row">
      <div class="col-md-4"><%= user.name %></div>
      <div class="col-md-4"><%= user.email %></div>
      <div class="col-md-4"><%= user.monthly_credits %></div>
    </div>
  <% end %>
</div>

<div>
  <%= link_to 'Add new user', new_account_user_path %>
</div>
