<%= render 'layouts/hero' %>
<div class="row box pad centerText">

<h2><%= @account.monthly_spend %> granted to <%= @account.users.count %> employees</h2>

</div>
<div ng-controller="UsersTableCtrl" class="row box">
  <div id="table-data" data-account-id="<%= @account.id %>"></div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Monthly Credits</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'users_table' %>
      <%= render 'users_table_angular' %>
    </tbody>
</table>
</div>

<div>
  <%= link_to 'Add new user', new_account_user_path %>
</div>
